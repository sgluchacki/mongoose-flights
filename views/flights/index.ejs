<%- include('../partials/header') %>

<table id="list">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Time of Departure</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(flight) { %>
            <% let now = Date.now(); %>
            <tr style="color: <%= flight.departs.getTime() < now ? 'red' : 'black' %>">
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
                <td><%= flight.departs %></td>
                <td><a href="flights/<%= flight.id %>">Details</a></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>