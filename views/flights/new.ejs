<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
    <label>Airline:</label>
    <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
    </select><br>
    <label>Airport:</label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DEN">DEN</option>
        <option value="DFW">DFW</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select><br>
    <label>Flight Number:</label>
    <input type="number" min="10" max="9999" name="flightNo"><br>
    <label>Time of Departure:</label>
    <% const date = new Date(); %>
    <input type="datetime-local" name="departs" value="<%= date.getFullYear() + 1; %>-<%= date.getMonth(); %>-<%= date.getDate(); %>T<%= date.getHours(); %>:<%= date.getMinutes(); %>"><br>
    <input type="submit" value="Add Flight">
</form>

<p>
    <%= date.getFullYear() + 1; %>-<%= date.getMonth(); %>-<%= date.getDate(); %>T<%= date.getHours(); %>:<%= date.getMinutes(); %>
</p>

<%- include('../partials/footer') %>